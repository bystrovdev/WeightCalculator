<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find our your ideal weight"
        android:textSize="28sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/yourAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your age:"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/titleMain"
        app:layout_constraintLeft_toLeftOf="@id/titleMain"/>

    <TextView
        android:id="@+id/yourHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your height:"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/yourAge"
        app:layout_constraintLeft_toLeftOf="@id/yourAge"/>

</androidx.constraintlayout.widget.ConstraintLayout>